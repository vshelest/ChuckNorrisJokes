<resources>
    <!-- Base application theme. -->
    <style name="Theme.SearchTextEntryField" parent="Theme.MaterialComponents.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_dynamic_neutral30</item>
        <item name="colorPrimaryVariant">@color/material_dynamic_neutral50</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">?attr/colorPrimaryVariant</item>
        <!-- Status bar options. -->
        <item name="android:windowTranslucentStatus">true</item>
        <!-- TextInputLayout -->
        <item name="boxBackgroundColor">#fff</item>
    </style>

    <style name="Theme.SearchTextEntryField.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.SearchTextEntryField.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.SearchTextEntryField.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>